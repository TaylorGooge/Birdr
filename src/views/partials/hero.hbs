<section class="position-relative">
    <div class="container-fluid position-relative z-index-1">
        <div class="position-relative rounded-4 overflow-hidden bg-dark">
            <!-- Slider main container -->
            <div class="swiper-main rounded-4 overflow-hidden position-absolute start-0 top-0 w-100 h-100 mb-0">
                <!-- Additional required wrapper -->
                <div class="swiper-wrapper rounded-5">
                    <!-- Slides -->
                    <div class="swiper-slide bg-cover bg-center bg-no-repeat"
                        style="background-image: url({{img}});"></div>
                </div>
            </div>
            <div class="position-relative text-white w-md-75 px-4 w-lg-60 mx-auto text-center z-index-1 py-12 py-lg-15">
                <!--Hero title-->
                <h1 class="display-1 mb-3 mb-md-4 position-relative">{{tagline}}
                </h1>

                <!--Hero text-->
                <p class="lead w-lg-60 mx-auto mb-5">{{product}}</p>

                <!--Hero buttons-->
                <div class="d-flex flex-column">
                    <div>
                        <a href="#features" class="btn btn-primary btn-lg">
                            {{link_text}}
                        </a>
                    </div>
                    <div class="pt-3 small">{{smallNote}}</div>
                </div>
            </div>
        </div>
        <!--/.row-->
    </div>
</section>
<!--end: Hero background slide section-->
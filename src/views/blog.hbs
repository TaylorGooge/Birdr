{{#extend "scripts"}}
{{/extend}}
{{#extend "stylesheets"}}
{{/extend}}
{{>preloader}}
{{>navbar}}
<main>
    <section>
        <div class="container pt-14 pb-9 pb-lg-12">
            <div class="row pt-lg-7">
                <div class="col-md-10 col-lg-8">
                    <ol class="breadcrumb mb-3">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Blog</li>
                        <li class="breadcrumb-item active" aria-current="page">Classic</li>
                    </ol>
                    <h1 class="mb-0 display-4">Insights, thoughts & announcements from us</h1>
                </div>
            </div>
        </div>
    </section>
    <section class="position-relative bg-white">
        <div class="container z-index-1 position-relative pb-9 pb-lg-11">
            {{#each blog}}
            {{#each this}}
            <article
                class="row g-0 mb-4 mb-lg-5 position-relative overflow-hidden hover-lift hover-shadow-lg border rounded-5 card-hover shadow-sm align-items-center">
                <div class="col-md-6 col-lg-5 p-0 p-lg-0">
                    {{#each this.attributes.mainPhoto.data}}
                    <div class="overflow-hidden">
                        <img src="http://localhost:1337{{this.attributes.url}}" alt="" class="img-fluid img-zoom">
                    </div>
                    {{/each}}
                </div>
                <div class="col-md-6 col-lg-7">
                    <div class="position-relative p-4 p-lg-5">
                        <div class="d-flex justify-content-start w-100 pb-3 align-items-center">
                            <small class="text-muted">:{{this.attributes.tag}}</small>
                        </div>
                        <div>
                            <h2 class="mb-4">
                                {{this.attributes.articleTitle}}
                            </h2>
                            <div class="d-flex mb-0 align-items-center pt-4">
                                <div class="position-relative me-2">
                                    <!--Avatar Image-->
                                    <img class="position-relative avatar sm rounded-circle"
                                        src="img/team/3.jpg" alt="">
                                </div>
                                {{#each this.attributes.admin_user}}
                                <span class="text-muted d-inline-block small">By <a href="#!"
                                        class="text-dark">{{this.attributes.firstname}} {{this.attributes.lastname}}</a></span>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
                <a href="\blogpost?id={{this.id}}" class="stretched-link"></a>
            </article>
            {{/each}}
            {{/each}}
            {{>pagination}}
        </div>
    </section>
    {{> blogsignup}}
</main>
{{>footer-3}}
{{>scroller}}